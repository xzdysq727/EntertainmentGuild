@{
    ViewData["Title"] = "Welcome";
}

<div class="container text-center mt-5">
    <h2>Welcome to ChromaCart Web</h2>
    <p class="mb-4">Please select your role to continue:</p>

    <div class="row justify-content-center">
        <div class="col-md-3">
            <img src="~/images/customer.png" alt="Customer" class="img-fluid mb-2 rounded" style="max-height: 150px;" />
            <a asp-controller="Login" asp-action="Customer" class="btn btn-outline-primary w-100 p-3">
                <i class="bi bi-person"></i><br /> Customer
            </a>
        </div>
        <div class="col-md-3">
            <img src="~/images/employee.png" alt="Employee" class="img-fluid mb-2 rounded" style="max-height: 150px;" />
            <a asp-controller="Login" asp-action="Employee" class="btn btn-outline-secondary w-100 p-3">
                <i class="bi bi-tools"></i><br /> Employee
            </a>
        </div>
        <div class="col-md-3">
            <img src="~/images/admin.png" alt="Admin" class="img-fluid mb-2 rounded" style="max-height: 150px;" />
            <a asp-controller="Login" asp-action="Admin" class="btn btn-outline-danger w-100 p-3">
                <i class="bi bi-shield-lock"></i><br /> Admin
            </a>
        </div>
    </div>

    <div class="mt-4">
        <p>Don't have an account?</p>
        <a asp-controller="Register" asp-action="Index" class="btn btn-success">Register Now</a>
    </div>
</div>
