@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@using EntertainmentGuild.Models
@using EntertainmentGuild.Models.Admin

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
    var role = ViewBag.Role as string ?? "Customer";
    var disabledList = ViewBag.DisabledUsers as List<DisabledUser> ?? new();
    bool isAdminView = role == "Admin";
}

<div class="row mt-4">
    <!-- 左侧导航 -->
    <div class="col-md-3">
        <button class="btn btn-success w-100 mb-3" data-bs-toggle="modal" data-bs-target="#addUserModal">➕ Add User</button>

        <div class="list-group">
            <a asp-action="Manage" asp-route-role="Customer"
               class="list-group-item list-group-item-action @(role == "Customer" ? "active" : "")">
                View Customers
            </a>
            <a asp-action="Manage" asp-route-role="Employee"
               class="list-group-item list-group-item-action @(role == "Employee" ? "active" : "")">
                View Employees
            </a>
            <a asp-action="Manage" asp-route-role="Admin"
               class="list-group-item list-group-item-action @(role == "Admin" ? "active" : "")">
                View Admins
            </a>
        </div>
    </div>

    <!-- 右侧用户列表 -->
    <div class="col-md-9">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <strong>@role - Active Users</strong>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <p>No active @role accounts found.</p>
                }
                else
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Username</th>
                                <th>User ID</th>
                                @if (!isAdminView)
                                {
                                    <th>Action</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Id</td>
                                    @if (!isAdminView)
                                    {
                                        <td>
                                            <form asp-action="ToggleDisable" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button class="btn btn-sm btn-danger">Disable</button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <!-- 禁用用户，仅非Admin时显示 -->
        @if (!isAdminView)
        {
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <strong>@role - Disabled Users</strong>
                </div>
                <div class="card-body">
                    @if (!disabledList.Any())
                    {
                        <p>No disabled @role users.</p>
                    }
                    else
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Username</th>
                                    <th>User ID</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in disabledList)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td>@user.UserName</td>
                                        <td>@user.UserId</td>
                                        <td>
                                            <form asp-action="ToggleDisable" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <button class="btn btn-sm btn-success">Enable</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- 添加用户模态框 -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddUser" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select class="form-select" name="role" required>
                            <option value="Customer">Customer</option>
                            <option value="Employee">Employee</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add User</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
