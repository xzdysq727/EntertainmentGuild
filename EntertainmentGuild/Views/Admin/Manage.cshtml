@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@using EntertainmentGuild.Models
@using EntertainmentGuild.Models.Admin

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
    var role = ViewBag.Role as string ?? "Customer";
    var disabledList = ViewBag.DisabledUsers as List<DisabledUser> ?? new();
    bool isAdminView = role == "Admin";
}

<style>
    :root {
        --cream: #fdf7e4;
        --gold: #b29b4b;
        --dark: #2e2e2e;
        --border-light: #e4dec7;
    }

    .card-custom {
        background-color: #fff;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        padding: 20px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
    }

    .card-header {
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
        font-weight: 600;
    }

    .list-group-item.active {
        background-color: var(--gold) !important;
        border-color: var(--gold) !important;
        color: white !important;
        font-weight: 600;
    }

    .btn-gold {
        background-color: var(--gold);
        color: white;
        font-weight: 500;
        border-radius: 50px;
        border: none;
    }

        .btn-gold:hover {
            background-color: #a58d3f;
        }

    .table th, .table td {
        vertical-align: middle;
    }

    .modal-content {
        border-radius: 16px;
    }

    .modal-header {
        border-bottom: 1px solid var(--border-light);
    }

    .modal-footer {
        border-top: 1px solid var(--border-light);
    }
</style>

<div class="row mt-4">
 
    <div class="col-md-3">
        <button class="btn btn-gold w-100 mb-3" data-bs-toggle="modal" data-bs-target="#addUserModal">➕ Add User</button>

        <div class="list-group">
            <a asp-action="Manage" asp-route-role="Customer"
               class="list-group-item list-group-item-action @(role == "Customer" ? "active" : "")">
                View Customers
            </a>
            <a asp-action="Manage" asp-route-role="Employee"
               class="list-group-item list-group-item-action @(role == "Employee" ? "active" : "")">
                View Employees
            </a>
            <a asp-action="Manage" asp-route-role="Admin"
               class="list-group-item list-group-item-action @(role == "Admin" ? "active" : "")">
                View Admins
            </a>
        </div>
    </div>

 
    <div class="col-md-9">
        <div class="card-custom mb-4">
            <div class="card-header bg-light">
                <strong>@role - Active Users</strong>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <p class="text-muted">No active @role accounts found.</p>
                }
                else
                {
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Email</th>
                                <th>Username</th>
                                <th>User ID</th>
                                @if (!isAdminView)
                                {
                                    <th>Action</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Id</td>
                                    @if (!isAdminView)
                                    {
                                        <td>
                                            <form asp-action="ToggleDisable" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button class="btn btn-sm btn-danger rounded-pill">Disable</button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    
        @if (!isAdminView)
        {
            <div class="card-custom">
                <div class="card-header bg-danger text-white">
                    <strong>@role - Disabled Users</strong>
                </div>
                <div class="card-body">
                    @if (!disabledList.Any())
                    {
                        <p class="text-muted">No disabled @role users.</p>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Email</th>
                                    <th>Username</th>
                                    <th>User ID</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in disabledList)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td>@user.UserName</td>
                                        <td>@user.UserId</td>
                                        <td>
                                            <form asp-action="ToggleDisable" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <button class="btn btn-sm btn-success rounded-pill">Enable</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        }
    </div>
</div>


<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddUser" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select class="form-select" name="role" required>
                            <option value="Customer">Customer</option>
                            <option value="Employee">Employee</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-gold">Add User</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
