@model EntertainmentGuild.ViewModels.TopProductsViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Top Products Management";
}

<div class="container mt-4">
    <h3 class="mb-4">Manage Top Products</h3>

    <!-- ✅ 添加模块 -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <strong>Add Top Product</strong>
        </div>
        <div class="card-body">
            <form asp-action="AddTopProductHandler" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="col-md-3">
                    <input name="Name" class="form-control" placeholder="Name" required />
                </div>
                <div class="col-md-2">
                    <input name="Price" type="number" step="0.01" class="form-control" placeholder="Price" required />
                </div>
                <div class="col-md-2">
                    <select id="category" name="Category" class="form-select" required>
                        <option value="">Category</option>
                        <option>Clothing</option>
                        <option>Pants</option>
                        <option>Skirts</option>
                        <option>Hats</option>
                        <option>Shoes</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="subCategory" name="SubCategory" class="form-select" required>
                        <option value="">SubCategory</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="SectionType" class="form-select" required>
                        <option value="">Section</option>
                        <option value="Carousel">Carousel</option>
                        <option value="Recommendation">Recommendation</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <input name="ImageFile" type="file" class="form-control" accept="image/*" />
                </div>
                <div class="col-md-12">
                    <textarea name="Description" class="form-control" placeholder="Description (optional)" rows="2"></textarea>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">Add</button>
                </div>
            </form>
        </div>
    </div>

    <!-- ✅ Carousel 模块 -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <strong>🖼️ Carousel Products (Max 4)</strong>
        </div>
        <div class="card-body">
            @if (!Model.Carousel.Any())
            {
                <p class="text-muted">No products in Carousel.</p>
            }
            else
            {
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>SubCategory</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Carousel)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="Image" width="60" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@item.Category</td>
                                <td>@item.SubCategory</td>
                                <td>@item.Description</td>
                                <td>
                                    <form asp-action="DeleteCarouselTopProduct" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- ✅ Recommendation 模块 -->
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <strong>⭐ Recommended Products (Max 2)</strong>
        </div>
        <div class="card-body">
            @if (!Model.Recommendations.Any())
            {
                <p class="text-muted">No recommended products yet.</p>
            }
            else
            {
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>SubCategory</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Recommendations)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="Image" width="60" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@item.Category</td>
                                <td>@item.SubCategory</td>
                                <td>@item.Description</td>
                                <td>
                                    <form asp-action="DeleteRecommendedTopProduct" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const subCategoryMap = {
            "Clothing": ["Shirt", "Vest", "T-shirt", "Jacket", "Down Coat", "Suit"],
            "Pants": ["Long Pants", "Shorts", "Cargo Pants", "Dress Pants"],
            "Skirts": ["Dress", "Mini Skirt", "Long Skirt"],
            "Hats": ["Baseball Cap", "Bucket Hat"],
            "Shoes": ["Sneakers", "Skate Shoes", "High Heels", "Slippers"]
        };

        const categorySelect = document.getElementById('category');
        const subCategorySelect = document.getElementById('subCategory');

        categorySelect.addEventListener('change', function () {
            const selected = categorySelect.value;
            const subs = subCategoryMap[selected] || [];
            subCategorySelect.innerHTML = '<option value="">Select SubCategory</option>';
            for (let item of subs) {
                const option = document.createElement('option');
                option.value = item;
                option.text = item;
                subCategorySelect.appendChild(option);
            }
        });
    </script>
}
