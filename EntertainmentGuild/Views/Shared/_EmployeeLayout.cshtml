<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Employee</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --cream: #fdf7e4;
            --gold: #b29b4b;
            --text-dark: #2e2e2e;
            --border-light: #d6cdb5;
        }

        .navbar-custom {
            background-color: var(--cream);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
            border-bottom: 1px solid var(--border-light);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.6rem;
            color: var(--text-dark) !important;
        }

        .nav-link {
            font-weight: 500;
            color: var(--text-dark) !important;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: var(--gold) !important;
            }

        .nav-icon {
            margin-right: 6px;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%232e2e2e' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(46,46,46, 0.8)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light navbar-custom sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand" asp-controller="Employee" asp-action="Index">
                <i class="bi bi-briefcase-fill nav-icon"></i> Employee Panel
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Product">
                            <i class="bi bi-box-seam nav-icon"></i>Product
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="ManageOrders">
                            <i class="bi bi-truck nav-icon"></i>Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="ChangePassword">
                            <i class="bi bi-person-gear nav-icon"></i>Account
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Logout" asp-action="Index">
                                <i class="bi bi-box-arrow-right nav-icon"></i>Logout
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
