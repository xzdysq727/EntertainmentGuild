@model List<EntertainmentGuild.Models.Order>

@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <h3 class="mb-4">
        <i class="bi bi-clock-history me-2 text-secondary"></i>Your Order History
    </h3>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no previous orders.</div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-4 border-0 shadow-sm" style="background-color: #fdf7e4;">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #fff7e0;">
                    <strong>Order ID: #@order.Id</strong>
                    <span class="text-muted">@order.OrderDate.ToString("g")</span>
                </div>

                <div class="card-body">
                    <table class="table table-bordered align-middle table-sm bg-white rounded">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 70px;">Image</th>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.OrderItems)
                            {
                                <tr>
                                    <td>
                                        @if (item.Product?.ImageData != null)
                                        {
                                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Product.ImageData)" width="60" class="rounded shadow-sm" style="object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <div class="text-muted small text-center">
                                                <i class="bi bi-image-alt" style="font-size: 1.5rem;"></i><br />No Image
                                            </div>
                                        }
                                    </td>
                                    <td>@item.Product?.Name</td>
                                    <td>@item.Product?.Category / @item.Product?.SubCategory</td>
                                    <td>$@item.Product?.Price.ToString("F2")</td>
                                    <td>@item.Quantity</td>
                                    <td class="fw-semibold text-end">$@(item.Product?.Price * item.Quantity ?? 0).ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="text-end mt-3">
                        <p><strong>Shipping Fee:</strong> $@order.ShippingFee.ToString("F2")</p>
                        <p><strong>Tax:</strong> $@order.Tax.ToString("F2")</p>
                        <p class="fs-5 fw-bold text-primary"><strong>Total:</strong> $@order.Total.ToString("F2")</p>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(order.Remarks))
                    {
                        <div class="mt-2 text-muted"><strong>Remarks:</strong> @order.Remarks</div>
                    }

                    <div class="mt-3 d-flex justify-content-end gap-2">
                        <a asp-controller="Customer"
                           asp-action="ViewShipping"
                           asp-route-id="@order.Id"
                           class="btn btn-outline-secondary btn-sm rounded-pill"
                           style="border-color: #b29b4b;">
                            <i class="bi bi-truck me-1"></i> View Shipping Status
                        </a>

                        <form asp-action="CancelOrder" asp-controller="Customer" method="post" onsubmit="return confirm('Are you sure you want to cancel this order?');">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                <i class="bi bi-x-circle me-1"></i>Cancel Order
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>


<footer class="mt-5 pt-4 pb-3 bg-light text-dark border-top shadow-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5 class="fw-bold" style="color:#b29b4b;">e-Closet</h5>
                <p class="text-muted small">
                    Your curated fashion corner.<br />
                    Blending style & soul with a touch of music.
                </p>
            </div>

            <div class="col-md-4 mb-3">
                <h6 class="fw-bold">Quick Links</h6>
                <ul class="list-unstyled small">
                    <li><a href="/Customer/Index" class="text-decoration-none text-dark">Home</a></li>
                    <li><a href="/Customer/Product" class="text-decoration-none text-dark">Products</a></li>
                    <li><a href="/Customer/Cart" class="text-decoration-none text-dark">Cart</a></li>
                    <li><a href="/Customer/Account" class="text-decoration-none text-dark">My Account</a></li>
                </ul>
            </div>

            <div class="col-md-4 mb-3">
                <h6 class="fw-bold">Contact</h6>
                <p class="small mb-1"><i class="bi bi-envelope me-1"></i> support@ecloset.com</p>
                <p class="small">
                    <i class="bi bi-music-note-beamed me-1"></i> Follow us on
                    <a href="#" class="text-decoration-none text-dark">Instagram</a>
                </p>
            </div>
        </div>

        <div class="text-center mt-4 border-top pt-3 small text-muted">
            © @DateTime.Now.Year e-Closet. All rights reserved.
        </div>
    </div>
</footer>
