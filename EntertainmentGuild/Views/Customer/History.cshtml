@model List<EntertainmentGuild.Models.Order>

@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5">
    <h3>Your Order History</h3>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no previous orders.</div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>Order ID: #@order.Id</strong>
                    <span class="text-muted">@order.OrderDate.ToString("g")</span>
                </div>

                <div class="card-body">
                    <table class="table table-bordered table-sm align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Image</th>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.OrderItems)
                            {
                                <tr>
                                    <td>
                                        @if (item.Product?.ImageData != null)
                                        {
                                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Product.ImageData)" width="60" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">No image</span>
                                        }
                                    </td>
                                    <td>@item.Product?.Name</td>
                                    <td>@item.Product?.Category / @item.Product?.SubCategory</td>
                                    <td>$@item.Product?.Price.ToString("F2")</td>
                                    <td>@item.Quantity</td>
                                    <td>$@(item.Product?.Price * item.Quantity ?? 0).ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="text-end mt-3">
                        <strong>Shipping Fee:</strong> $@order.ShippingFee.ToString("F2") <br />
                        <strong>Tax:</strong> $@order.Tax.ToString("F2") <br />
                        <strong>Total:</strong> <span class="fs-5 text-primary">$@order.Total.ToString("F2")</span>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(order.Remarks))
                    {
                        <div class="mt-2 text-muted"><strong>Remarks:</strong> @order.Remarks</div>
                    }

                    <!-- ✅ View Shipping Status Button -->
                    <div class="mt-3 text-end">
                        <a asp-controller="Customer"
                           asp-action="ViewShipping"
                           asp-route-id="@order.Id"
                           class="btn btn-outline-info btn-sm">
                            View Shipping Status
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>
