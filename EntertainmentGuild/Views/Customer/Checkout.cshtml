@model EntertainmentGuild.ViewModels.CheckoutViewModel

@{
    // Set page title and layout
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <form method="post" asp-action="PayNow" asp-controller="Customer">
        <div class="row g-4">

            <div class="col-md-7">
                <div class="p-4 rounded shadow-sm" style="background-color: #fdf7e4;">
                    <h4 class="mb-3" style="color: #2e2e2e;">
                        <!-- Icon and section header for customer info -->
                        <i class="bi bi-person-vcard me-2" style="color:#b29b4b;"></i>Customer Information
                    </h4>
                    <!-- Display the user's email address -->
                    <p><strong>Email:</strong> @Model.UserEmail</p>
                    <hr />

                    <h5 style="color: #2e2e2e;">Delivery Method</h5>
                    <!-- Delivery method options -->
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Delivery" id="ship" value="Ship" checked />
                        <label class="form-check-label" for="ship">Ship</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="Delivery" id="pickup" value="Pickup" />
                        <label class="form-check-label" for="pickup">Click & Collect</label>
                    </div>

                    <h5 style="color: #2e2e2e;">Shipping Address</h5>
                    <!-- If user has saved addresses, show dropdown; else prompt to add one -->
                    @if (Model.Addresses.Any())
                    {
                        <select class="form-select mb-3 rounded-3" name="AddressId" required>
                            @foreach (var addr in Model.Addresses)
                            {
                                <option value="@addr.Id">@addr.AddressLine, @addr.City, @addr.State, @addr.PostalCode</option>
                            }
                        </select>
                    }
                    else
                    {
                        <p class="text-muted">No saved addresses. <a href="/Customer/ViewAddress">Add one</a>.</p>
                    }

                    <h5 style="color: #2e2e2e;">Shipping Method</h5>
                    <!-- Shipping method selection with price options -->
                    <select class="form-select mb-3 rounded-3" id="shippingMethod" name="ShippingMethod">
                        <option value="0">Standard (3-5 days) - Free</option>
                        <option value="8">Express (1-2 days) - $8.00</option>
                        <option value="15">Next-Day Delivery - $15.00</option>
                    </select>

                    <h5 style="color: #2e2e2e;">Payment Method</h5>
                    <!-- If user has saved cards, show dropdown; else prompt to add one -->
                    @if (Model.Cards.Any())
                    {
                        <select class="form-select mb-3 rounded-3" name="CardId" required>
                            <option value="">-- Select Card --</option>
                            @foreach (var card in Model.Cards)
                            {
                                <option value="@card.Id">@card.CardType ****@card.Last4Digits</option>
                            }
                        </select>
                    }
                    else
                    {
                        <p class="text-muted">No saved cards. <a href="/Customer/Account">Add one</a>.</p>
                    }

                    <!-- Newsletter signup checkbox -->
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="newsletter" checked />
                        <label class="form-check-label">
                            Sign me up for news and offers from this store
                        </label>
                    </div>

                    <!-- Hidden inputs for cart item IDs to pass to the backend -->
                    @foreach (var item in Model.CartItems)
                    {
                        <input type="hidden" name="SelectedCartIds" value="@item.CartId" />
                    }

                    <!-- Submit button styled with gold background -->
                    <div class="mt-4">
                        <button type="submit"
                                class="btn text-white w-100 fw-bold py-2"
                                style="background-color: #b29b4b; border: none;">
                            💳 Pay Now
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="bg-white border rounded p-4 shadow-sm" style="border-color: #d6cdb5;">
                    <h5 class="mb-3">
                        <!-- Icon and order summary title -->
                        <i class="bi bi-bag-check me-2" style="color:#b29b4b;"></i>Order Summary
                    </h5>

                    <!-- List all cart items with details and subtotal -->
                    <ul class="list-group mb-3">
                        @foreach (var item in Model.CartItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@item.Product.Name</strong><br />
                                    <small class="text-muted">@item.Product.Category - @item.Product.SubCategory</small><br />
                                    <small>Qty: @item.Quantity × @item.Product.Price.ToString("C")</small>
                                </div>
                                <span class="fw-semibold">@((item.Product.Price * item.Quantity).ToString("C"))</span>
                            </li>
                        }
                    </ul>

                    <!-- Display subtotal, shipping fee, tax, and total amount -->
                    <div class="d-flex justify-content-between mb-1">
                        <span>Subtotal</span>
                        <span id="subtotal">@Model.Subtotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Shipping</span>
                        <span id="shippingFee">$0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax</span>
                        <span>@Model.Tax.ToString("C")</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Total</span>
                        <span id="totalAmount" class="text-primary">
                            @(Model.Subtotal + Model.Tax).ToString("C")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<footer class="mt-5 pt-4 pb-3 bg-light text-dark border-top shadow-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5 class="fw-bold" style="color:#b29b4b;">e-Closet</h5>
                <p class="text-muted small">
                    <!-- Footer description -->
                    Your curated fashion corner.
                    Blending style & soul with a touch of music.
                </p>
            </div>

            <div class="col-md-4 mb-3">
                <h6 class="fw-bold">Quick Links</h6>
                <ul class="list-unstyled small">
                    <li><a href="/Customer/Index" class="text-decoration-none text-dark">Home</a></li>
                    <li><a href="/Customer/Product" class="text-decoration-none text-dark">Products</a></li>
                    <li><a href="/Customer/Cart" class="text-decoration-none text-dark">Cart</a></li>
                    <li><a href="/Customer/Account" class="text-decoration-none text-dark">My Account</a></li>
                </ul>
            </div>

            <div class="col-md-4 mb-3">
                <h6 class="fw-bold">Contact</h6>
                <p class="small mb-1"><i class="bi bi-envelope me-1"></i> support@ecloset.com</p>
                <p class="small">
                    <i class="bi bi-music-note-beamed me-1"></i> Follow us on
                    <a href="#" class="text-decoration-none text-dark">Instagram</a>
                </p>
            </div>
        </div>

        <div class="text-center mt-4 border-top pt-3 small text-muted">
            <!-- Copyright with dynamic year -->
            © @DateTime.Now.Year e-Closet. All rights reserved.
        </div>
    </div>
</footer>

@section Scripts {
    <script>
        // Get shipping method select element
        const shippingSelect = document.getElementById("shippingMethod");
        // Parse subtotal and tax from server-rendered values
        const subtotalValue = parseFloat("@Model.Subtotal");
        const taxValue = parseFloat("@Model.Tax");

        // Function to update shipping fee and total price dynamically
        function updateTotal() {
            const shippingFee = parseFloat(shippingSelect.value);
            const total = subtotalValue + taxValue + shippingFee;

            // Update UI elements with formatted price values
            document.getElementById("shippingFee").textContent = "$" + shippingFee.toFixed(2);
            document.getElementById("totalAmount").textContent = "$" + total.toFixed(2);
        }

        // Update total whenever shipping method changes
        shippingSelect.addEventListener("change", updateTotal);
        // Initialize total display on page load
        updateTotal();
    </script>
}
