@using EntertainmentGuild.Models.Admin
@model Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- 🖼 Image Section -->
        <div class="col-md-6">
            <img src="@(Model.ImageData != null
                                         ? $"data:image/png;base64,{Convert.ToBase64String(Model.ImageData)}"
                                         : "/images/placeholder.png")"
                 class="img-fluid rounded shadow" alt="Product Image" />
        </div>

        <!-- 📦 Details Section -->
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">Category: <strong>@Model.Category</strong></p>
            <p class="text-muted">Subcategory: <strong>@Model.SubCategory</strong></p>
            <h4 class="text-primary">$@Model.Price.ToString("F2")</h4>

            <!-- 🧮 Inventory Display -->
            <p class="text-muted">
                Remaining:
                <strong>
                    @if (Model.Quantity == 0)
                    {
                        <span class="text-danger">Out of Stock</span>
                    }
                    else
                    {
                        @($"{Model.Quantity} in stock")
                    }
                </strong>
            </p>

            <!-- ✅ 成功提示 -->
            @if (TempData["CartMessage"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["CartMessage"]</div>
            }

            <!-- 🛒 Add to Cart 表单 + 数量选择 -->
            @if (Model.Quantity > 0)
            {
                <form asp-action="AddToCart" method="post" class="mt-3 d-flex align-items-center">
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <select name="quantity" class="form-select me-2" style="width: 90px;">
                        @for (int i = 1; i <= Math.Min(Model.Quantity, 10); i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>

                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </button>
                </form>
            }
            else
            {
                <button class="btn btn-secondary mt-3" disabled>Out of Stock</button>
            }

            <hr />
            <h5>Description</h5>
            <p>@Model.Description</p>

            <a asp-action="Product" class="btn btn-outline-secondary mt-3">Back to Products</a>
        </div>
    </div>
</div>
