@model EntertainmentGuild.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Image section -->
        <div class="col-md-6">
            @if (Model.ImageData != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.ImageData)" class="img-fluid rounded shadow" />
            }
            else
            {
                <img src="/images/placeholder.png" class="img-fluid rounded shadow" />
            }
        </div>

        <!-- Details section -->
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">Category: <strong>@Model.Category</strong></p>
            <p class="text-muted">SubCategory: <strong>@Model.SubCategory</strong></p>
            <h4 class="text-primary">$@Model.Price.ToString("F2")</h4>

            <!-- ✅ 成功消息提示 -->
            @if (TempData["CartMessage"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["CartMessage"]</div>
            }

            <!-- ✅ Add to Cart 表单 -->
            <form asp-action="AddToCart" method="post" class="mt-3">
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </form>

            <hr />
            <h5>Description</h5>
            <p>@Model.Description</p>

            <a asp-action="Product" class="btn btn-outline-secondary mt-3">Back to Products</a>
        </div>
    </div>
</div>
