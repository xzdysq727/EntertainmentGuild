@using EntertainmentGuild.Models.Admin
@model IEnumerable<Product>

@{
    // Set the layout and page title
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Products";
    // Retrieve selected category and subcategory from ViewBag (for highlighting active links)
    var selectedCategory = ViewBag.SelectedCategory as string;
    var selectedSubCategory = ViewBag.SelectedSubCategory as string;

    var subCategoryMap = new Dictionary<string, List<string>> {
        { "Clothing", new() { "Shirt", "Vest", "T-shirt", "Jacket", "Down Coat", "Suit" } },
        { "Pants", new() { "Long Pants", "Shorts", "Cargo Pants", "Dress Pants" } },
        { "Skirts", new() { "Dress", "Mini Skirt", "Long Skirt" } },
        { "Hats", new() { "Baseball Cap", "Bucket Hat" } },
        { "Shoes", new() { "Sneakers", "Skate Shoes", "High Heels", "Slippers" } }
    };
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar: Categories and subcategories -->
        <div class="col-md-3 mb-4">
            <div class="card category-card shadow-sm">
                <div class="card-header bg-white border-bottom fw-bold" style="color: #b29b4b;">
                    <i class="bi bi-list-ul me-2"></i>Categories
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var kv in subCategoryMap)
                        {
                            <li class="mb-2">
                                <strong class="text-dark">@kv.Key</strong>
                                <ul class="list-unstyled ms-3 mt-1">
                                    @foreach (var sub in kv.Value)
                                    {
                                        var isActive = sub == selectedSubCategory ? "active" : "";
                                        <li>
                                            <a href="@Url.Action("Product", "Customer", new { subCategory = sub })"
                                               class="category-link @isActive">
                                                @sub
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    <hr /> 
                    <!-- Button to clear filters and show all products -->
                    <a href="@Url.Action("Product", "Customer")" class="btn btn-outline-secondary w-100 btn-sm rounded-pill">
                        Show All
                    </a>
                </div>
            </div>
        </div>

        <!-- Main content: Product cards -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4><i class="bi bi-box-seam me-2"></i>Products</h4>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">No products found for this category.</div>
            }
            else
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 shadow-sm border-0 rounded-3" style="transition: transform 0.3s ease;">
                                @if (item.ImageData != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)"
                                         class="card-img-top rounded-top" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="/images/placeholder.png" class="card-img-top rounded-top" />
                                }

                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h6 class="card-title text-truncate">@item.Name</h6>
                                        <p class="card-text text-muted text-truncate">@item.Description</p>
                                        <p class="card-text fw-bold" style="color: #b29b4b;">¥@item.Price.ToString("F2")</p>
                                    </div>
                                    <a href="@Url.Action("ProductDetails", "Customer", new { id = item.Id })"
                                       class="btn btn-warning btn-sm mt-2 w-100 rounded-pill text-white"
                                       style="background-color: #b29b4b; border: none;">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>


<style>
    .category-card {
        background-color: #fdf7e4;
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }

    .category-link {
        display: block;
        padding: 4px 8px;
        border-radius: 6px;
        text-decoration: none;
        color: #2e2e2e;
        font-size: 0.95rem;
        transition: background-color 0.2s ease;
    }

        .category-link:hover,
        .category-link.active {
            background-color: #b29b4b;
            color: white !important;
            font-weight: 500;
        }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
    }
</style>
