@using EntertainmentGuild.Models.Admin
@model TopProductsViewModel

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Home";

    var categories = new[] { "Clothing", "Pants", "Skirts", "Hats", "Shoes" };
    var icons = new Dictionary<string, string> {
        { "Clothing", "cloth.png" }, { "Pants", "pant.png" }, { "Skirts", "skrit.png" },
        { "Hats", "hat.png" }, { "Shoes", "shoes.jpg" }
    };
    var carousel = Model.Carousel ?? new List<CarouselTopProduct>();
    var recommendations = Model.Recommendations ?? new List<RecommendedTopProduct>();
}


<div class="bg-light py-3 shadow-sm sticky-top" style="top: 60px; z-index: 1040;">
    <div class="container d-flex align-items-center">
        <form asp-controller="Customer" asp-action="Search" method="get" class="flex-grow-1 me-3 position-relative">
            <input type="text" class="form-control rounded-pill px-4 shadow-sm border-0"
                   placeholder="Search item or brand..." id="searchInput" name="keyword" autocomplete="off" />
            <div id="suggestionPopup"
                 class="bg-white border rounded shadow position-absolute w-100 mt-1"
                 style="display: none; z-index: 2000;">
                <ul id="suggestionList" class="list-unstyled mb-0 p-2"></ul>
            </div>
        </form>
    </div>
</div>



<div style="height: 45px;"></div>


<div class="container mb-4 text-center">
    <h1 class="fw-bold" style="font-size: 2.5rem; color: #b29b4b;">
        Welcome to <span style="color: #2e2e2e;">e-Closet</span>
    </h1>
    <p class="lead text-muted" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
        Your curated fashion corner — where style, soul, and music blend in harmony.
    </p>

</div>


<div class="container mb-5">
    <div class="mx-auto shadow rounded overflow-hidden" style="max-width: 1080px;">
        <div id="carouselTop" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < 4; i++)
                {
                    var item = carousel.ElementAtOrDefault(i);
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        @if (item?.ImageData != null)
                        {
                            <img src="/Image/Carousel/@item.Id"
                                 class="d-block w-100"
                                 alt="@item.Name"
                                 style="height: 360px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="d-flex justify-content-center align-items-center bg-light" style="height: 360px;">
                                <h4 class="text-muted">No product</h4>
                            </div>
                        }
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselTop" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselTop" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>


<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h5 class="mb-3 fw-bold text-uppercase" style="color: #a38b30;">Recommended Products</h5>
            <div class="row">
                @foreach (var rec in recommendations)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow-sm border-0" style="border-radius: 12px;">
                            @if (rec.ImageData != null)
                            {
                                <img src="/Image/Recommendation/@rec.Id"
                                     class="card-img-top"
                                     style="height: 225px; object-fit: cover; border-top-left-radius: 12px; border-top-right-radius: 12px;" />
                            }
                            else
                            {
                                <div class="d-flex justify-content-center align-items-center bg-light"
                                     style="height: 225px; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                                    <span class="text-muted">No image</span>
                                </div>
                            }

                            <div class="card-body px-3 py-2 d-flex flex-column">
                                <h6 class="card-title mb-1 fw-semibold">@rec.Name</h6>
                                <p class="text-muted small mb-1">@rec.Category > @rec.SubCategory</p>
                                <p class="fw-bold mb-0" style="color: #a38b30;">@rec.Price.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<div class="container mb-5">
    <h5 class="fw-bold mb-3 text-uppercase text-secondary">Shop by Category</h5>
    <div class="d-flex justify-content-between flex-wrap gap-4">
        @foreach (var category in categories)
        {
            <div class="text-center flex-fill" style="min-width: 100px;">
                <a href="@Url.Action("Product", "Customer", new { category = category })" class="text-decoration-none text-dark">
                    <img src="~/images/@icons[category]" class="rounded-circle border shadow-sm mb-2"
                         style="height: 80px; width: 80px; object-fit: cover;" />
                    <div>@category</div>
                </a>
            </div>
        }
    </div>
</div>



<div class="container mb-5">
    <h5 class="fw-bold mb-3 text-uppercase text-secondary">You May Also Like</h5>
    <div class="row">
        @foreach (var product in ViewBag.RandomProducts as List<EntertainmentGuild.Models.Product>)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow border-0 hover-shadow">
                    @if (product.ImageData != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(product.ImageData)"
                             class="card-img-top" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center bg-light" style="height: 200px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@product.Name</h6>
                        <p class="text-muted small">@product.Category > @product.SubCategory</p>
                        <p class="fw-bold mt-auto" style="color: #a38b30;">@product.Price.ToString("C")</p>
                        <a class="btn btn-sm mt-2 w-100 text-white"
                           style="background-color: #a38b30; border-radius: 8px; transition: background-color 0.3s;"
                           href="@Url.Action("ProductDetails", "Customer", new { id = product.Id })">
                            View Details
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
<footer class="mt-5 pt-4 pb-3 bg-light text-dark border-top shadow-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5 class="fw-bold" style="color:#b29b4b;">e-Closet</h5>
                <p class="text-muted small">
                    Your curated fashion corner.
                    Blending style & soul with a touch of music.
                </p>
            </div>

            <div class="col-md-4 mb-3">
                <h6 class="fw-bold">Quick Links</h6>
                <ul class="list-unstyled small">
                    <li><a href="/Customer/Index" class="text-decoration-none text-dark">Home</a></li>
                    <li><a href="/Customer/Product" class="text-decoration-none text-dark">Products</a></li>
                    <li><a href="/Customer/Cart" class="text-decoration-none text-dark">Cart</a></li>
                    <li><a href="/Customer/Account" class="text-decoration-none text-dark">My Account</a></li>
                </ul>
            </div>

            <div class="col-md-4 mb-3">
                <h6 class="fw-bold">Contact</h6>
                <p class="small mb-1"><i class="bi bi-envelope me-1"></i> support@ecloset.com</p>
                <p class="small">
                    <i class="bi bi-music-note-beamed me-1"></i> Follow us on
                    <a href="#" class="text-decoration-none text-dark">Instagram</a>
                </p>
            </div>
        </div>

        <div class="text-center mt-4 border-top pt-3 small text-muted">
            © @DateTime.Now.Year e-Closet. All rights reserved.
        </div>
    </div>
</footer>


@section Scripts {
    <script>
        const searchInput = document.getElementById("searchInput");
        const popup = document.getElementById("suggestionPopup");
        const list = document.getElementById("suggestionList");

        searchInput.addEventListener("focus", async () => {
            const res = await fetch("/Customer/GetRandomProducts");
            const data = await res.json();

            list.innerHTML = "";
            data.forEach(name => {
                const li = document.createElement("li");
                li.innerHTML = `<a href="/Customer/Search?keyword=${encodeURIComponent(name)}" class="d-block py-2 px-3 text-decoration-none text-dark">${name}</a>`;
                list.appendChild(li);
            });

            popup.style.display = "block";
        });

        document.addEventListener("click", function (e) {
            if (!searchInput.contains(e.target) && !popup.contains(e.target)) {
                popup.style.display = "none";
            }
        });
    </script>
    <style>
        .hover-shadow:hover {
            transform: scale(1.02);
            transition: all 0.3s ease;
        }
    </style>
}
