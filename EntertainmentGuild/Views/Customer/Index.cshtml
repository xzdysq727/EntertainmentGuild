@using EntertainmentGuild.Models.Admin
@model TopProductsViewModel

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Home";

    var categories = new[] { "Clothing", "Pants", "Skirts", "Hats", "Shoes" };
    var subCategoryMap = new Dictionary<string, List<string>> {
        { "Clothing", new() { "Shirt", "Vest", "T-shirt", "Jacket", "Down Coat", "Suit" } },
        { "Pants", new() { "Long Pants", "Shorts", "Cargo Pants", "Dress Pants" } },
        { "Skirts", new() { "Dress", "Mini Skirt", "Long Skirt" } },
        { "Hats", new() { "Baseball Cap", "Bucket Hat" } },
        { "Shoes", new() { "Sneakers", "Skate Shoes", "High Heels", "Slippers" } }
    };
    var random = new Random();

    var carousel = Model.Carousel ?? new List<CarouselTopProduct>();
    var recommendations = Model.Recommendations ?? new List<RecommendedTopProduct>();
}

<!-- ✅ 顶部搜索栏 -->
<div class="container-fluid bg-white py-3 shadow-sm position-relative">
    <div class="container d-flex align-items-center">
        <form asp-action="Search" method="get" class="flex-grow-1 me-3 position-relative">
            <input type="text" class="form-control rounded-pill px-4" placeholder="Search item or brand..." id="searchInput" name="keyword" autocomplete="off" />
            <div id="categoryPopup" class="bg-white border rounded shadow-sm position-absolute w-100 mt-1 p-3" style="display: none; z-index: 1000;">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Categories</strong>
                        <ul class="list-unstyled mt-2">
                            @foreach (var category in categories)
                            {
                                <li><a href="@Url.Action("Search", "Customer", new { category = category })" class="text-dark text-decoration-none">@category</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <strong>Popular Subcategories</strong>
                        <ul class="list-unstyled mt-2">
                            @{
                                var allSubs = subCategoryMap.SelectMany(kv => kv.Value).OrderBy(_ => random.Next()).Take(6).ToList();
                                foreach (var sub in allSubs)
                                {
                                    <li><a href="@Url.Action("Search", "Customer", new { subCategory = sub })" class="text-muted text-decoration-none">@sub</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- ✅ 轮播图 Carousel -->
<div class="container mt-4">
    <div id="carouselTop" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < 4; i++)
            {
                var item = carousel.ElementAtOrDefault(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    @if (item?.ImageData != null)
                    {
                        <img src="/Image/Carousel/@item.Id" class="d-block mx-auto" alt="@item.Name" style="max-height: 320px;" />
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px; background: #f5f5f5;">
                            <h4 class="text-muted">No product</h4>
                        </div>
                    }
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselTop" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselTop" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- ✅ 推荐模块 -->
    <div class="row">
        <h5 class="mb-3">Recommended Products</h5>
        @if (!recommendations.Any())
        {
            <p class="text-muted">No recommended products yet.</p>
        }
        else
        {
            foreach (var rec in recommendations)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (rec.ImageData != null)
                        {
                            <img src="/Image/Recommendation/@rec.Id" class="card-img-top" alt="@rec.Name" style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="d-flex justify-content-center align-items-center" style="height: 200px; background: #f5f5f5;">
                                <span class="text-muted">No image</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@rec.Name</h5>
                            <p class="card-text">@rec.Description</p>
                            <p class="text-muted small">@rec.Category > @rec.SubCategory</p>
                            <p class="fw-bold text-primary">@rec.Price.ToString("C")</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


<div class="container mb-5">
    <h5 class="fw-bold mb-3 text-uppercase text-secondary">Shop by Category</h5>
    <div class="row text-center">
        <div class="col-4 col-sm-3 col-md-2 mb-4">
            <a href="@Url.Action("Product", "Customer", new { category = "Clothing" })" class="text-decoration-none text-dark">
                <i class="bi bi-shirt fs-1"></i>
                <div class="mt-2">Clothing</div>
            </a>
        </div>
        <div class="col-4 col-sm-3 col-md-2 mb-4">
            <a href="@Url.Action("Product", "Customer", new { category = "Pants" })" class="text-decoration-none text-dark">
                <i class="bi bi-sliders2 fs-1"></i>
                <div class="mt-2">Pants</div>
            </a>
        </div>
        <div class="col-4 col-sm-3 col-md-2 mb-4">
            <a href="@Url.Action("Product", "Customer", new { category = "Skirts" })" class="text-decoration-none text-dark">
                <i class="bi bi-reception-4 fs-1"></i>
                <div class="mt-2">Skirts</div>
            </a>
        </div>
        <div class="col-4 col-sm-3 col-md-2 mb-4">
            <a href="@Url.Action("Product", "Customer", new { category = "Hats" })" class="text-decoration-none text-dark">
                <i class="bi bi-hat fs-1"></i>
                <div class="mt-2">Hats</div>
            </a>
        </div>
        <div class="col-4 col-sm-3 col-md-2 mb-4">
            <a href="@Url.Action("Product", "Customer", new { category = "Shoes" })" class="text-decoration-none text-dark">
                <i class="bi bi-box-seam fs-1"></i>
                <div class="mt-2">Shoes</div>
            </a>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        const searchInput = document.getElementById("searchInput");
        const popup = document.getElementById("categoryPopup");

        searchInput.addEventListener("focus", () => {
            popup.style.display = "block";
        });

        document.addEventListener("click", function (e) {
            if (!searchInput.contains(e.target) && !popup.contains(e.target)) {
                popup.style.display = "none";
            }
        });
    </script>
}
