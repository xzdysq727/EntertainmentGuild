@using EntertainmentGuild.Models.Admin
@model TopProductsViewModel

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Home";

    var categories = new[] { "Clothing", "Pants", "Skirts", "Hats", "Shoes" };
    var icons = new Dictionary<string, string> {
        { "Clothing", "cloth.png" }, { "Pants", "pant.png" }, { "Skirts", "skrit.png" },
        { "Hats", "hat.png" }, { "Shoes", "shoes.jpg" }
    };
    var carousel = Model.Carousel ?? new List<CarouselTopProduct>();
    var recommendations = Model.Recommendations ?? new List<RecommendedTopProduct>();
}

<!-- ✅ 搜索栏 -->
<div class="container-fluid bg-white py-3 shadow-sm position-relative">
    <div class="container d-flex align-items-center">
        <form asp-controller="Customer" asp-action="Search" method="get" class="flex-grow-1 me-3 position-relative">
            <input type="text" class="form-control rounded-pill px-4" placeholder="Search item or brand..." id="searchInput" name="keyword" autocomplete="off" />
            <!-- 🔍 数据库建议弹窗 -->
            <div id="suggestionPopup" class="bg-white border rounded shadow-sm position-absolute w-100 mt-1" style="display: none; z-index: 2000;">
                <ul id="suggestionList" class="list-unstyled mb-0 p-2"></ul>
            </div>
        </form>
    </div>
</div>

<!-- ✅ 轮播图 -->
<div class="container mt-4">
    <div id="carouselTop" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner rounded shadow-sm">
            @for (int i = 0; i < 4; i++)
            {
                var item = carousel.ElementAtOrDefault(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    @if (item?.ImageData != null)
                    {
                        <img src="/Image/Carousel/@item.Id" class="d-block w-100 rounded"
                             alt="@item.Name"
                             style="max-height: 500px; min-height: 400px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center rounded"
                             style="height: 400px; background: #f5f5f5;">
                            <h4 class="text-muted">No product</h4>
                        </div>
                    }
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselTop" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselTop" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- ✅ 推荐商品 -->
    <div class="row">
        <h5 class="mb-3">Recommended Products</h5>
        @if (!recommendations.Any())
        {
            <p class="text-muted">No recommended products yet.</p>
        }
        else
        {
            foreach (var rec in recommendations)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm" style="min-height: 500px;">
                        @if (rec.ImageData != null)
                        {
                            <img src="/Image/Recommendation/@rec.Id" class="card-img-top"
                                 alt="@rec.Name"
                                 style="height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="d-flex justify-content-center align-items-center"
                                 style="height: 300px; background: #f5f5f5;">
                                <span class="text-muted">No image</span>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@rec.Name</h5>
                            <p class="card-text">@rec.Description</p>
                            <p class="text-muted small">@rec.Category > @rec.SubCategory</p>
                            <p class="fw-bold text-primary mt-auto">@rec.Price.ToString("C")</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- ✅ 分类导航 -->
<div class="container mb-5">
    <h5 class="fw-bold mb-3 text-uppercase text-secondary">Shop by Category</h5>
    <div class="row text-center">
        @foreach (var category in categories)
        {
            <div class="col-4 col-sm-3 col-md-2 mb-4">
                <a href="@Url.Action("Product", "Customer", new { category = category })" class="text-decoration-none text-dark">
                    <img src="~/images/@icons[category]" alt="@category" class="img-fluid" style="height: 80px;" />
                    <div class="mt-2">@category</div>
                </a>
            </div>
        }
    </div>
</div>

<!-- ✅ 随机推荐商品 -->
<div class="container mt-5 mb-5">
    <h5 class="fw-bold mb-3 text-uppercase text-secondary">You May Also Like</h5>
    <div class="row">
        @foreach (var product in ViewBag.RandomProducts as List<EntertainmentGuild.Models.Product>)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (product.ImageData != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(product.ImageData)" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 200px; background: #f5f5f5;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@product.Name</h6>
                        <p class="text-muted small">@product.Category > @product.SubCategory</p>
                        <p class="fw-bold text-primary mt-auto">@product.Price.ToString("C")</p>
                        <a class="btn btn-sm btn-outline-primary w-100 mt-2" href="@Url.Action("ProductDetails", "Customer", new { id = product.Id })">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const searchInput = document.getElementById("searchInput");
        const popup = document.getElementById("suggestionPopup");
        const list = document.getElementById("suggestionList");

        searchInput.addEventListener("focus", async () => {
            const res = await fetch("/Customer/GetRandomProducts");
            const data = await res.json();

            list.innerHTML = "";
            data.forEach(name => {
                const li = document.createElement("li");
                li.innerHTML = `<a href="/Customer/Search?keyword=${encodeURIComponent(name)}" class="d-block py-2 px-3 text-decoration-none text-dark">${name}</a>`;
                list.appendChild(li);
            });

            popup.style.display = "block";
        });

        document.addEventListener("click", function (e) {
            if (!searchInput.contains(e.target) && !popup.contains(e.target)) {
                popup.style.display = "none";
            }
        });
    </script>
}
