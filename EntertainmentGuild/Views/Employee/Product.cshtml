@using EntertainmentGuild.Models.Admin
@model IEnumerable<Product>

@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    ViewData["Title"] = "Product Management";

    var selectedCategory = ViewBag.SelectedCategory as string;
    var selectedSubCategory = ViewBag.SelectedSubCategory as string;

    var subCategoryMap = new Dictionary<string, List<string>> {
        { "Clothing", new() { "Shirt", "Vest", "T-shirt", "Jacket", "Down Coat", "Suit" } },
        { "Pants", new() { "Long Pants", "Shorts", "Cargo Pants", "Dress Pants" } },
        { "Skirts", new() { "Dress", "Mini Skirt", "Long Skirt" } },
        { "Hats", new() { "Baseball Cap", "Bucket Hat" } },
        { "Shoes", new() { "Sneakers", "Skate Shoes", "High Heels", "Slippers" } }
    };
}

<style>
    body {
        background-color: white;
    }

    .category-card {
        background-color: #fdf7e4;
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }

    .category-link {
        display: block;
        padding: 4px 8px;
        border-radius: 6px;
        text-decoration: none;
        color: #2e2e2e;
        font-size: 0.95rem;
        transition: background-color 0.2s ease;
    }

        .category-link:hover,
        .category-link.active {
            background-color: #b29b4b;
            color: white !important;
            font-weight: 500;
        }

    .card-product {
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
        border: none;
    }

        .card-product:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.08);
        }

        .card-product img {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

    .form-label {
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 4px;
    }

    .btn-save {
        background-color: #b29b4b;
        color: white;
        border: none;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        padding: 4px 16px;
        transition: background-color 0.2s ease;
    }

        .btn-save:hover {
            background-color: #a18e3c;
        }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card category-card shadow-sm">
                <div class="card-header bg-white border-bottom fw-bold" style="color: #b29b4b;">
                    Categories
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var kv in subCategoryMap)
                        {
                            <li class="mb-2">
                                <strong class="text-dark">@kv.Key</strong>
                                <ul class="list-unstyled ms-3 mt-1">
                                    @foreach (var sub in kv.Value)
                                    {
                                        var isActive = sub == selectedSubCategory ? "active" : "";
                                        <li>
                                            <a href="@Url.Action("Product", "Employee", new { subCategory = sub })"
                                               class="category-link @isActive">
                                                @sub
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    <hr />
                    <a href="@Url.Action("Product", "Employee")" class="btn btn-outline-secondary w-100 btn-sm rounded-pill">
                        Show All
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 style="color: #2e2e2e;">Manage Products</h4>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">No products found for this category.</div>
            }
            else
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card card-product h-100">
                                @if (item.ImageData != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)" class="card-img-top" />
                                }
                                else
                                {
                                    <img src="/images/placeholder.png" class="card-img-top" />
                                }

                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h6 class="card-title text-truncate">@item.Name</h6>
                                        <p class="card-text text-muted text-truncate">@item.Description</p>
                                        <p class="card-text fw-bold" style="color: #b29b4b;">¥@item.Price.ToString("F2")</p>
                                    </div>
                                    <form asp-action="UpdateQuantity" asp-controller="Employee" method="post">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <label for="qty-@item.Id" class="form-label">Quantity</label>
                                        <div class="input-group input-group-sm mb-2">
                                            <input type="number" id="qty-@item.Id" name="newQuantity" class="form-control"
                                                   min="0" max="999" value="@item.Quantity" />
                                        </div>
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-save">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
