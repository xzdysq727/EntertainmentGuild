<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Page title dynamically set with ViewData -->
    <title>@ViewData["Title"] - EntertainmentGuild</title>
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Site-specific stylesheets with cache busting -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EntertainmentGuild.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navigation bar with responsive collapse -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Brand/logo linking to homepage -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">EntertainmentGuild</a>
                <!-- Toggle button for responsive menu on small screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Collapsible navbar links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home page navigation link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <!-- Privacy policy navigation link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main content container -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Placeholder for content rendered by views -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer section with copyright -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EntertainmentGuild - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery and Bootstrap JS for interactivity and responsive behavior -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Site-specific JavaScript with cache busting -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Optional section for page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
